
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow authenticated users to create documents in the farmerregs collection.
    // This supports anonymous authentication.
    match /farmerregs/{farmerId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
    }

    // Allow read and write access to the activeFarmer document for any user.
    // This is used to persist the currently selected farmer in the UI across sessions.
    match /activeFarmer/{docId} {
        allow read, write: if true;
    }

    // By default, deny all other reads and writes to the database.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
